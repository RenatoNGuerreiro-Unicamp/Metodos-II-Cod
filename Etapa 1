import os
os.environ["OMP_NUM_THREADS"] = '1'

import numpy as np              # cálculo otimizado
import pandas as pd  
rais = pd.read_csv('RAIS_VINC_PUB_SUL.txt',
                        sep = ';',
                        encoding = "Latin-1",
                        header = 0)

rais.info()

rais.shape
# Limpar as colunas que eu quero
rais = rais[[ 'Faixa Remun Média (SM)',
             'Tempo Emprego',
            'Ind Portador Defic',
              'Motivo Desligamento', 
              'Escolaridade após 2005',
              'Idade',  
              'Sexo Trabalhador',
              'Raça Cor']]
rais.info()
#mostrar um pouco da coluna
print(rais['Motivo Desligamento'])

# Deixar apenas os desligamentos sem justa causa
Njustacausa = rais[rais['Motivo Desligamento'].isin([21])]
print(Njustacausa)
